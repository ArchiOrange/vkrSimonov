<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="/stylesheets/theme.css" type="text/css">
</head>

<body >
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container"> <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse" data-target="#navbar11">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar11">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"> <a class="nav-link" href="#">Предметы</a> </li>
          <li class="nav-item"> <a class="nav-link" href="#">Преподаватели</a> </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"> <a class="nav-link" href="#" contenteditable="true">Name_Admin</a> </li>
          <a class="btn btn-primary" href="#">Выйти</a>
        </ul>
      </div>
    </div>
  </nav>
  <div class="py-5">
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Название предмета</th>
            <th scope="col">Количество часов</th>
          </tr>
        </thead>
        <tbody>

        {{#each result}}






          <tr class="ind_btn">
            <th scope="row" id={{this.id}}>{{this.name}}</th>
            <td>{{this.hours}}</td>
          </tr>

            {{/each}}
        </tbody>
      </table>
      <a class="btn btn-primary add_subject">Добавить новый предмет</a>
    </div>
  </div>



  <div class="modal fade" id="modal_ind" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title title_ind" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Количество часов:</label>
            <input type="number" class="form-control hours" id="recipient-name" value="">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger delete">Удалить</button>
          <button type="button" class="btn btn-primary save">Сохранить</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="modal_add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title " id="exampleModalLabel">Добавление дисциплины</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Название дисциплины</label>
            <input type="text" class="form-control name_add" id="recipient-name" value="">
            <label for="recipient-name" class="col-form-label">Количество часов:</label>
            <input type="number" class="form-control hours_add" id="recipient-name" value="">
          </div>
        </div>
        <div class="modal-footer">

          <button type="button" class="btn btn-primary add">Сохранить</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    </div>
  </div>


  <script
    src="https://code.jquery.com/jquery-3.5.0.min.js"
    integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ="
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>



<script>

$(".ind_btn").on("click",function(){
  let title = $(this).find("th").text();
  let title_obj = $(".title_ind");
  let id = $(this).find("th").attr("id");
  let hours = $(this).find("td").text();
  $(".hours").val(hours);
  title_obj.text(title);
  title_obj.attr("id_subject",id);
  $("#modal_ind").modal('show');

})
$(".add_subject").on("click", function(){
  $("#modal_add").modal("show");
})

$(".save").on("click",function(){
  let hours = $(".hours").val();
  let id = $(".title_ind").attr("id_subject");
  let url = "updatesubject?id="+id+"&hours="+hours;

  $.get(url).done(function(){
    location.reload();

  });
})

$(".add").on("click",function(){
  var name = $(".name_add").val();
  var hours = $(".hours_add").val();

  if (name=="" || hours==""){
    alert("Введены не все данные");
  }else {
    let url = "addSubjects?name="+name+"&hours="+hours;
    $.get(url).done(function(){
      location.reload();
    });
  }
})

$(".delete").on("click",function(){
  let id = $(".title_ind").attr("id_subject");
  let url = "deletesubject?id="+id;
  $.get(url).done(function(){
    location.reload();
  });
  $
})

</script>
</body>

</html>
